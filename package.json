{
  "name": "lendesk-assignment",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec \"npx ts-node src/index.ts\" --watch src --ext ts,js,json",
    "dev:build": "docker compose up --build -d",
    "dev:start": "docker compose up -d",
    "dev:stop": "docker compose down",
    "dev:clean": "docker compose down && docker rmi lendesk-backend redis:8-alpine",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:unit:watch": "jest --watch --selectProjects unit",
    "test:int": "jest --selectProjects integration",
    "test:int:watch": "jest --watch --selectProjects integration",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "redis": "^4.7.0",
    "redis-om": "^0.4.7",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@testcontainers/redis": "^11.5.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/prettier": "^2.7.3",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
